<script language="JavaScript">
    function showOSVolunteerForm(dowhat) {

        var checkBox = document.getElementById("inputIsVolunteer");
        if(checkBox.checked == true) {
            document.getElementById('insertOSVolunteerForm').style.display = "block";
        }
        else{
            document.getElementById('insertOSVolunteerForm').style.display = "none";
