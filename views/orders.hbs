<h2>Insert Order and Form</h2>
<label>Hint refresh page to see newly inserted Adults, Players and Volunteers.</label>
<p></p>
<fieldset>
    <form id="insertOrderAjax">
        <label for="Adult">Select Adult: </label>
        <select name="inputOrderAdult" id="inputOrderAdult">
            <option value="">Select an Adult</option>
            {{#each data}}
            <option value="{{this.adultID}}">{{this.firstName}} {{this.lastName}}</option>
            {{/each}}
        </select>
        <label for="Player">Select Player: </label>
        <select name="inputOrderPlayer" id="inputOrderPlayer">
            <option value="">Select a Player</option>
            {{#each players}}
            <option value="{{this.playerID}}">{{this.firstName}} {{this.lastName}}</option>
            {{/each}}
        </select>
        <label for="Volunteer">Select VolunteerAdult: </label>
        <select name="inputOrderVolunteer" id="inputOrderVolunteer">
            <option value="">Select a Volunteer</option>
            {{#each volunteers}}
            <option value="{{this.adultID}}">{{this.firstName}} {{this.lastName}}</option>
            {{/each}}
        </select>

        <label for="orderDate"> Order Date: </label>
        <input type="date" name="inputOrderDate" id="inputOrderDate">

        <label for="orderTotal"> Order Total: </label>
        <input type="number" name="inputOrderTotal" id="inputOrderTotal">

        <label for="Odetails">Order Details: </label>
        <input type="text" name="orderDetails" id="inputOrderDetails">

        <label for="Fdetails">Form Details: </label>
        <input type="text" name="formDetails" id="inputFormDetails">

        <label for="Fdivision">Form Division: </label>
        <select name="inputFormDivision" id="inputFormDivision">
            <option value="">Select Division </option>
            {{#each divisions}}
            <option value="{{this.seasonDivisionID}}">{{this.description}}</option>
            {{/each}}
        </select>

        <input type="submit" value="Submit Order">
    </form>
    </fieldset>
<script src="./js/orders/add_order.js"></script>
